@* display book props passesd as model using partial and include navigation to edit and delete*@

@model Classwork.Models.BookModel

<h1>Details for Book @Model.id</h1>

<partial name = "_book" model = "@Model"/>
<a asp-action = "UpdateForm" asp-controller = "Book" asp-route-bookID = "@Model.id">
    <button class="btn btn-warning">Edit</button>
</a>
<a asp-action = "DeleteConf" asp-controller = "Book" asp-route-bookID = "@Model.id">
    <button class="btn btn-danger">Delete</button>
</a>